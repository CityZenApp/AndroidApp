<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.cityzen.cityzen.Fragments.PoiDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/poiDialogHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:contentDescription="@string/poi_details_close"
                    android:id="@+id/poiDialogClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_close_dialog" />

                <TextView
                    android:id="@+id/poiTitleDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/poiDialogFavorite"
                    android:layout_toRightOf="@+id/poiDialogClose"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    tools:text="Poi title"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <ImageButton
                    android:contentDescription="@string/poi_details_mark_as_favorite"
                    android:id="@+id/poiDialogFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/poiDialogEdit"
                    android:layout_toStartOf="@+id/poiDialogEdit"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_favorite_poi_false" />

                <ImageButton
                    android:contentDescription="@string/poi_details_edit"
                    android:id="@+id/poiDialogEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/poiDialogShare"
                    android:layout_toStartOf="@+id/poiDialogShare"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_mode_edit_dialog" />

                <ImageButton
                    android:contentDescription="@string/poi_details_share"
                    android:id="@+id/poiDialogShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_share_variant" />
            </RelativeLayout>

            <LinearLayout
